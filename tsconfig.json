{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "types": ["vitest/globals"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*",
    "setup-tests.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
